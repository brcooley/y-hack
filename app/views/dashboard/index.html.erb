<style type="text/css">
    /* Override some defaults */
    html, body {
      background-color: #1ABC9C;
    }

</style>
<div id="wrap">
	<div class="row" id="task-feed">
		<%= render partial: "newtask" %>
	</div>
</div>
<footer class="row">
	<div id="stat-summary span-6">
		<p>You <% %> by an average of <% %> minute(s)</p>
	</div>
</footer>
<%= javascript_tag do %>
	cur_user = '<% current_user %>';
<% end %>
<script>
	$(document).ready(function() {
		// Save task
		var savebtn = $('#save-btn')
		savebtn[0].onclick = null;
		savebtn.click(function() {
			var event = {
				'name': $('#newtask > .name').html(),
				'tag': $('#newtask > .tag').html(),
				'guess': $('#newtask > .guess').html()
			}
			$.ajax({
				type: 'POST',
				url: '/users/' + cur_user + '/tasks',
				data: event,
				success: function() {
					console.log('Task saved');
				}
			});
		});
	})
</script>
