<style type="text/css">
    /* Override some defaults */
    html, body {
      background-color: #1ABC9C;
    }
</style>
<div class="row" id="task-feed" data-url="<%= user_tasks_path(current_user) %>">
	<%= render partial: "newtask" %>
</div>
<footer class="row">
	<div id="stat-summary span-6">
		<p>You <% %> by an average of <% %> minute(s)</p>
	</div>
</footer>

<script>
	$(document).ready(function() {
		// Save task
		var savebtn = $('#save-btn')
		savebtn[0].onclick = null;
		savebtn.click(function() {
      var event = {task: {
        'name': $('#newtask > .name').html(),
        'duration': $('#newtask > .tag').html(),
      }};
      console.log(event);
			$.ajax({
				type: 'POST',
				url: $('#task-feed').data('url'),
				data: event,
				success: function() {
					console.log('Task saved');
				}
			});
		});
	})
</script>
